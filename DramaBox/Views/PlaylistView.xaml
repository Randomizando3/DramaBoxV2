<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DramaBox.Views.PlaylistView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.NavBarIsVisible="False"
    NavigationPage.HasNavigationBar="False"
    NavigationPage.HasBackButton="False">

    <Grid Padding="18" RowSpacing="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Topo -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" VerticalOptions="Center">
            <Label Text="Playlist"
                   Style="{StaticResource TitleLargeLabelStyle}" />

            <Button Grid.Column="1"
                    Text="⚙"
                    BackgroundColor="Transparent"
                    WidthRequest="44"
                    HeightRequest="44"
                    CornerRadius="14" />
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="14">

                <Border Style="{StaticResource CardBorderStyle}">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Continuar assistindo"
                               Style="{StaticResource TitleMediumLabelStyle}" />
                        <Label Text="Seus episódios salvos/pausados (mock)."
                               Style="{StaticResource MutedLabelStyle}" />
                    </VerticalStackLayout>
                </Border>

                <Border Style="{StaticResource CardBorderStyle}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Salvos"
                               Style="{StaticResource TitleMediumLabelStyle}" />

                        <Border Style="{StaticResource CardBorderStyle}">
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <BoxView WidthRequest="54" HeightRequest="54" CornerRadius="14" Opacity="0.15" />
                                <VerticalStackLayout Grid.Column="1" Spacing="2">
                                    <Label Text="Série salva 1" FontAttributes="Bold" />
                                    <Label Text="3 eps salvos" Style="{StaticResource MutedLabelStyle}" />
                                </VerticalStackLayout>
                            </Grid>
                        </Border>

                        <Border Style="{StaticResource CardBorderStyle}">
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <BoxView WidthRequest="54" HeightRequest="54" CornerRadius="14" Opacity="0.15" />
                                <VerticalStackLayout Grid.Column="1" Spacing="2">
                                    <Label Text="Série salva 2" FontAttributes="Bold" />
                                    <Label Text="1 ep salvo" Style="{StaticResource MutedLabelStyle}" />
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </VerticalStackLayout>
                </Border>

                <BoxView HeightRequest="8" Opacity="0" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
