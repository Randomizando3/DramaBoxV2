<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DramaBox.Views.PlaylistView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.NavBarIsVisible="False"
    NavigationPage.HasNavigationBar="False"
    NavigationPage.HasBackButton="False">

    <Grid Padding="18" RowSpacing="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Topo -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" VerticalOptions="Center">
            <Label Text="Playlist"
                   Style="{StaticResource TitleLargeLabelStyle}" />

            <Button Grid.Column="1"
                    Text="⟳"
                    BackgroundColor="Transparent"
                    WidthRequest="44"
                    HeightRequest="44"
                    CornerRadius="14"
                    Clicked="OnRefreshClicked"/>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="14">

                <!-- CONTINUAR -->
                <Border Style="{StaticResource CardBorderStyle}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Continuar assistindo"
                               Style="{StaticResource TitleMediumLabelStyle}" />
                        <Label Text="Episódios pausados/retomáveis."
                               Style="{StaticResource MutedLabelStyle}" />

                        <CollectionView x:Name="ContinueList"
                                        ItemsSource="{Binding ContinueItems}"
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource CardBorderStyle}" Padding="12" Margin="0,0,0,10">
                                        <Grid ColumnDefinitions="110,*" ColumnSpacing="12">

                                            <Border StrokeThickness="0" Padding="0" HeightRequest="70">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="14"/>
                                                </Border.StrokeShape>
                                                <Image Source="{Binding DramaCoverUrl}"
                                                       Aspect="AspectFill"
                                                       HeightRequest="70"
                                                       WidthRequest="110"/>
                                            </Border>

                                            <VerticalStackLayout Grid.Column="1" Spacing="4">
                                                <Label Text="{Binding DramaTitle}"
                                                       FontAttributes="Bold"
                                                       FontSize="14"
                                                       LineBreakMode="TailTruncation"/>

                                                <Label Text="{Binding EpisodeTitle}"
                                                       FontSize="12"
                                                       TextColor="{StaticResource AppMutedTextColor}"
                                                       LineBreakMode="TailTruncation"/>

                                                <Grid ColumnDefinitions="*,Auto" Margin="0,6,0,0">
                                                    <Label Text="{Binding EpisodeNumber, StringFormat='Ep. {0}'}"
                                                           FontSize="12"
                                                           TextColor="{StaticResource AppMutedTextColor}" />

                                                    <Button Grid.Column="1"
                                                            Text="▶"
                                                            BackgroundColor="Transparent"
                                                            Clicked="OnContinuePlayClicked"/>
                                                </Grid>
                                            </VerticalStackLayout>

                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <Label x:Name="ContinueEmpty"
                               Text="Nada para retomar ainda."
                               IsVisible="False"
                               Style="{StaticResource MutedLabelStyle}"
                               HorizontalTextAlignment="Center"
                               Margin="0,6,0,0"/>
                    </VerticalStackLayout>
                </Border>

                <!-- SALVOS -->
                <Border Style="{StaticResource CardBorderStyle}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Salvos"
                               Style="{StaticResource TitleMediumLabelStyle}" />
                        <Label Text="Séries que você adicionou na playlist."
                               Style="{StaticResource MutedLabelStyle}" />

                        <CollectionView x:Name="SavedList"
                                        ItemsSource="{Binding SavedItems}"
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource CardBorderStyle}" Padding="12" Margin="0,0,0,10">
                                        <Grid ColumnDefinitions="110,*" ColumnSpacing="12">

                                            <Border StrokeThickness="0" Padding="0" HeightRequest="70">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="14"/>
                                                </Border.StrokeShape>
                                                <Image Source="{Binding CoverUrl}"
                                                       Aspect="AspectFill"
                                                       HeightRequest="70"
                                                       WidthRequest="110"/>
                                            </Border>

                                            <VerticalStackLayout Grid.Column="1" Spacing="4">
                                                <Label Text="{Binding Title}"
                                                       FontAttributes="Bold"
                                                       FontSize="14"
                                                       LineBreakMode="TailTruncation"/>

                                                <Label Text="{Binding Subtitle}"
                                                       FontSize="12"
                                                       TextColor="{StaticResource AppMutedTextColor}"
                                                       LineBreakMode="TailTruncation"/>

                                                <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,6,0,0" ColumnSpacing="8">
                                                    <Button Text="Abrir"
                                                            BackgroundColor="Transparent"
                                                            Clicked="OnOpenSavedClicked"/>

                                                    <Button Grid.Column="1"
                                                            Text="Remover"
                                                            BackgroundColor="Transparent"
                                                            TextColor="{StaticResource AppMutedTextColor}"
                                                            Clicked="OnRemoveSavedClicked"/>

                                                    <Label Grid.Column="2"
                                                           Text="★"
                                                           TextColor="{StaticResource AppMutedTextColor}"
                                                           VerticalTextAlignment="Center"/>
                                                </Grid>
                                            </VerticalStackLayout>

                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <Label x:Name="SavedEmpty"
                               Text="Nenhum drama salvo ainda."
                               IsVisible="False"
                               Style="{StaticResource MutedLabelStyle}"
                               HorizontalTextAlignment="Center"
                               Margin="0,6,0,0"/>
                    </VerticalStackLayout>
                </Border>

                <BoxView HeightRequest="8" Opacity="0" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
