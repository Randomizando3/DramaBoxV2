<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DramaBox.Views.PlaylistView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.NavBarIsVisible="False"
    NavigationPage.HasNavigationBar="False"
    NavigationPage.HasBackButton="False">

    <Grid Padding="18" RowSpacing="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Topo -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" VerticalOptions="Center">
            <Label Text="Playlist"
                   Style="{StaticResource TitleLargeLabelStyle}" />

            <!-- Refresh por ícone (se não tiver refresh.png, me diga qual ícone usar aqui) -->
            <Border Grid.Column="1"
                    StrokeThickness="1"
                    WidthRequest="44"
                    HeightRequest="44"
                    BackgroundColor="{AppThemeBinding Light=#0F000000, Dark=#55000000}"
                    Stroke="{AppThemeBinding Light=#1A000000, Dark=#26FFFFFF}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="14"/>
                </Border.StrokeShape>

                <ImageButton Source="{AppThemeBinding Light=refresh.png, Dark=refreshwhite.png}"
                             BackgroundColor="Transparent"
                             WidthRequest="44"
                             HeightRequest="44"
                             Padding="10"
                             Clicked="OnRefreshClicked"/>
            </Border>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="14">

                <!-- CONTINUAR -->
                <Border Style="{StaticResource CardBorderStyle}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Continuar assistindo"
                               Style="{StaticResource TitleMediumLabelStyle}" />
                        <Label Text="Episódios pausados/retomáveis."
                               Style="{StaticResource MutedLabelStyle}" />

                        <CollectionView x:Name="ContinueList"
                                        ItemsSource="{Binding ContinueItems}"
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource CardBorderStyle}" Padding="12" Margin="0,0,0,10">
                                        <Grid ColumnDefinitions="110,*" ColumnSpacing="12">

                                            <Border StrokeThickness="0" Padding="0" HeightRequest="70">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="14"/>
                                                </Border.StrokeShape>
                                                <Image Source="{Binding DramaCoverUrl}"
                                                       Aspect="AspectFill"
                                                       HeightRequest="70"
                                                       WidthRequest="110"/>
                                            </Border>

                                            <VerticalStackLayout Grid.Column="1" Spacing="4">
                                                <Label Text="{Binding DramaTitle}"
                                                       FontAttributes="Bold"
                                                       FontSize="14"
                                                       LineBreakMode="TailTruncation"/>

                                                <Label Text="{Binding EpisodeTitle}"
                                                       FontSize="12"
                                                       TextColor="{StaticResource AppMutedTextColor}"
                                                       LineBreakMode="TailTruncation"/>

                                                <Grid ColumnDefinitions="*,Auto" Margin="0,6,0,0">
                                                    <Label Text="{Binding EpisodeNumber, StringFormat='Ep. {0}'}"
                                                           FontSize="12"
                                                           TextColor="{StaticResource AppMutedTextColor}"
                                                           VerticalTextAlignment="Center"/>

                                                    <!-- PLAY (claro/escuro) -->
                                                    <Border Grid.Column="1"
                                                            StrokeThickness="1"
                                                            WidthRequest="40"
                                                            HeightRequest="40"
                                                            BackgroundColor="{AppThemeBinding Light=#14000000, Dark=#55000000}"
                                                            Stroke="{AppThemeBinding Light=#1A000000, Dark=#26FFFFFF}">
                                                        <Border.StrokeShape>
                                                            <RoundRectangle CornerRadius="12"/>
                                                        </Border.StrokeShape>

                                                        <ImageButton Source="{AppThemeBinding Light=play.png, Dark=playwhite.png}"
                                                                     BackgroundColor="Transparent"
                                                                     WidthRequest="40"
                                                                     HeightRequest="40"
                                                                     Padding="9"
                                                                     Clicked="OnContinuePlayClicked"/>
                                                    </Border>
                                                </Grid>
                                            </VerticalStackLayout>

                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <Label x:Name="ContinueEmpty"
                               Text="Nada para retomar ainda."
                               IsVisible="False"
                               Style="{StaticResource MutedLabelStyle}"
                               HorizontalTextAlignment="Center"
                               Margin="0,6,0,0"/>
                    </VerticalStackLayout>
                </Border>

                <!-- SALVOS -->
                <Border Style="{StaticResource CardBorderStyle}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Salvos"
                               Style="{StaticResource TitleMediumLabelStyle}" />
                        <Label Text="Séries que você adicionou na playlist."
                               Style="{StaticResource MutedLabelStyle}" />

                        <CollectionView x:Name="SavedList"
                                        ItemsSource="{Binding SavedItems}"
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource CardBorderStyle}" Padding="12" Margin="0,0,0,10">
                                        <Grid ColumnDefinitions="110,*" ColumnSpacing="12">

                                            <Border StrokeThickness="0" Padding="0" HeightRequest="70">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="14"/>
                                                </Border.StrokeShape>
                                                <Image Source="{Binding CoverUrl}"
                                                       Aspect="AspectFill"
                                                       HeightRequest="70"
                                                       WidthRequest="110"/>
                                            </Border>

                                            <VerticalStackLayout Grid.Column="1" Spacing="4">
                                                <Label Text="{Binding Title}"
                                                       FontAttributes="Bold"
                                                       FontSize="14"
                                                       LineBreakMode="TailTruncation"/>

                                                <Label Text="{Binding Subtitle}"
                                                       FontSize="12"
                                                       TextColor="{StaticResource AppMutedTextColor}"
                                                       LineBreakMode="TailTruncation"/>

                                                <!-- Ações: só ícones (igual Community) -->
                                                <Grid ColumnDefinitions="Auto,Auto,*" Margin="0,8,0,0" ColumnSpacing="10"
                                                      VerticalOptions="Center">

                                                    <!-- ABRIR (play claro/escuro) -->
                                                    <Border StrokeThickness="1"
                                                            WidthRequest="44"
                                                            HeightRequest="44"
                                                            BackgroundColor="{AppThemeBinding Light=#14000000, Dark=#55000000}"
                                                            Stroke="{AppThemeBinding Light=#1A000000, Dark=#26FFFFFF}">
                                                        <Border.StrokeShape>
                                                            <RoundRectangle CornerRadius="12"/>
                                                        </Border.StrokeShape>

                                                        <ImageButton Source="{AppThemeBinding Light=play.png, Dark=playwhite.png}"
                                                                     BackgroundColor="Transparent"
                                                                     WidthRequest="44"
                                                                     HeightRequest="44"
                                                                     Padding="11"
                                                                     Clicked="OnOpenSavedClicked"/>
                                                    </Border>

                                                    <!-- REMOVER (remove.png sempre) -->
                                                    <Border Grid.Column="1"
                                                            StrokeThickness="1"
                                                            WidthRequest="44"
                                                            HeightRequest="44"
                                                            BackgroundColor="{AppThemeBinding Light=#14000000, Dark=#55000000}"
                                                            Stroke="{AppThemeBinding Light=#1A000000, Dark=#26FFFFFF}">
                                                        <Border.StrokeShape>
                                                            <RoundRectangle CornerRadius="12"/>
                                                        </Border.StrokeShape>

                                                        <ImageButton Source="remove.png"
                                                                     BackgroundColor="Transparent"
                                                                     WidthRequest="44"
                                                                     HeightRequest="44"
                                                                     Padding="11"
                                                                     Clicked="OnRemoveSavedClicked"/>
                                                    </Border>

                                                    <!-- (opcional) estrela/marcador à direita -->
                                                    <Label Grid.Column="2"
                                                           Text="★"
                                                           TextColor="{StaticResource AppMutedTextColor}"
                                                           VerticalTextAlignment="Center"
                                                           HorizontalTextAlignment="End"
                                                           Opacity="0.75"/>
                                                </Grid>
                                            </VerticalStackLayout>

                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <Label x:Name="SavedEmpty"
                               Text="Nenhum drama salvo ainda."
                               IsVisible="False"
                               Style="{StaticResource MutedLabelStyle}"
                               HorizontalTextAlignment="Center"
                               Margin="0,6,0,0"/>
                    </VerticalStackLayout>
                </Border>

                <BoxView HeightRequest="8" Opacity="0" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>