<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DramaBox.Views.CommunityView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.NavBarIsVisible="False"
    NavigationPage.HasNavigationBar="False"
    NavigationPage.HasBackButton="False">

    <Grid Padding="18" RowSpacing="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Topo -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" VerticalOptions="Center">
            <Label Text="Autorais"
                   Style="{StaticResource TitleLargeLabelStyle}" />

            <!-- Random (dice.png) -->
            <ImageButton Grid.Column="1"
                         Source="dice.png"
                         BackgroundColor="Transparent"
                         WidthRequest="44"
                         HeightRequest="44"
                         Padding="10"
                         Clicked="OnRandomClicked"/>
        </Grid>

        <!-- Tabs -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*,*" Margin="0,-5,0,-10" ColumnSpacing="10">
            <Button x:Name="TabRecommended"
                    Text="Recomendados"
                    FontSize="10"
                    Clicked="OnTabRecommended"
                    CornerRadius="14" />

            <Button x:Name="TabPopular"
                    Grid.Column="1"
                    Text="Populares"
                    FontSize="10"
                    Clicked="OnTabPopular"
                    CornerRadius="14" />

            <Button x:Name="TabCommunity"
                    Grid.Column="2"
                    FontSize="10"
                    Text="Comunidade"
                    Clicked="OnTabCommunity"
                    CornerRadius="14" />
        </Grid>

        <!-- Feed -->
        <CollectionView Grid.Row="2"
                        x:Name="Feed"
                        ItemsSource="{Binding FeedItems}"
                        SelectionMode="None"
                        VerticalScrollBarVisibility="Never">

            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="18"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource CardBorderStyle}"
                            Padding="0"
                            Margin="0,0,0,6">

                        <Grid>

                            <!-- Área clicável do card (capa) -->
                            <Grid HeightRequest="220">

                                <Image Source="{Binding CoverUrl}"
                                       Aspect="AspectFill"
                                       HeightRequest="220" />

                                <!-- Gradiente (não bloqueia toque) -->
                                <BoxView HeightRequest="220"
                                         InputTransparent="True">
                                    <BoxView.Background>
                                        <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                            <GradientStop Color="#D1000000" Offset="0" />
                                            <GradientStop Color="#2E000000" Offset="0.55" />
                                            <GradientStop Color="#00000000" Offset="1" />
                                        </LinearGradientBrush>
                                    </BoxView.Background>
                                </BoxView>

                                <!-- Textos (não bloqueiam toque) -->
                                <Grid Padding="14"
                                      RowDefinitions="Auto,Auto,Auto,*"
                                      InputTransparent="True">
                                    <Label Text="{Binding Kicker}"
                                           FontSize="13"
                                           FontAttributes="Bold"
                                           TextColor="White"
                                           Opacity="0.92"/>

                                    <Label Grid.Row="1"
                                           Text="{Binding Title}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="White"
                                           Margin="0,6,0,0"
                                           LineBreakMode="TailTruncation"/>

                                    <Label Grid.Row="2"
                                           Text="{Binding Subtitle}"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           TextColor="#E5E7EB"
                                           Margin="0,6,0,0"
                                           LineBreakMode="TailTruncation"/>
                                </Grid>

                                <!-- Tap na capa -->
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnCardTapped"/>
                                </Grid.GestureRecognizers>
                            </Grid>

                            <!-- Botões (sem TapGestureRecognizer -> evita crash no Android) -->
                            <Grid Padding="14"
                                  VerticalOptions="End"
                                  ColumnDefinitions="Auto,Auto,Auto"
                                  ColumnSpacing="10"
                                  ZIndex="5">

                                <!-- Assistir (playwhite.png) -->
                                <Border Stroke="#26FFFFFF"
                                        StrokeThickness="1"
                                        BackgroundColor="#1AFFFFFF"
                                        WidthRequest="44"
                                        HeightRequest="44">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>

                                    <ImageButton Source="playwhite.png"
                                                 BackgroundColor="Transparent"
                                                 WidthRequest="44"
                                                 HeightRequest="44"
                                                 Padding="10"
                                                 Clicked="OnPlaySeriesClicked"/>
                                </Border>

                                <!-- Curtir (likewhite.png) -->
                                <Border Grid.Column="1"
                                        Stroke="#26FFFFFF"
                                        StrokeThickness="1"
                                        BackgroundColor="#1AFFFFFF"
                                        WidthRequest="44"
                                        HeightRequest="44">

                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>

                                    <!-- Curtido: vermelho menos transparente -->
                                    <Border.Triggers>
                                        <DataTrigger TargetType="Border"
                                                     Binding="{Binding IsLiked}"
                                                     Value="True">
                                            <Setter Property="BackgroundColor" Value="#B3EF4444"/>
                                            <Setter Property="Stroke" Value="#80EF4444"/>
                                        </DataTrigger>
                                    </Border.Triggers>

                                    <!-- CLICÁVEL via ImageButton (EventArgs) -->
                                    <ImageButton Source="likewhite.png"
                                                 BackgroundColor="Transparent"
                                                 WidthRequest="44"
                                                 HeightRequest="44"
                                                 Padding="11"
                                                 Clicked="OnLikeSeriesTapped"/>
                                </Border>

                                <!-- Share (sharewhite.png) -->
                                <Border Grid.Column="2"
                                        Stroke="#26FFFFFF"
                                        StrokeThickness="1"
                                        BackgroundColor="#1AFFFFFF"
                                        WidthRequest="44"
                                        HeightRequest="44">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>

                                    <!-- CLICÁVEL via ImageButton (EventArgs) -->
                                    <ImageButton Source="sharewhite.png"
                                                 BackgroundColor="Transparent"
                                                 WidthRequest="44"
                                                 HeightRequest="44"
                                                 Padding="11"
                                                 Clicked="OnShareSeriesTapped"/>
                                </Border>

                            </Grid>

                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>