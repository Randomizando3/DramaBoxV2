<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DramaBox.Views.CommunityView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:shapes="clr-namespace:Microsoft.Maui.Controls.Shapes;assembly=Microsoft.Maui.Controls"
    Shell.NavBarIsVisible="False"
    NavigationPage.HasNavigationBar="False"
    NavigationPage.HasBackButton="False">

    <Grid Padding="18" RowSpacing="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Topo -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" VerticalOptions="Center">
            <Label Text="Autorais"
                   Style="{StaticResource TitleLargeLabelStyle}" />

            <!-- âœ… Random -->
            <Button Grid.Column="1"
                    Text="ðŸŽ²"
                    BackgroundColor="Transparent"
                    WidthRequest="44"
                    HeightRequest="44"
                    CornerRadius="14"
                    Clicked="OnRandomClicked" />
        </Grid>

        <!-- Tabs -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*,*" Margin="0,-5,0,-10" ColumnSpacing="10">
            <Button x:Name="TabRecommended"
                    Text="Recomendados"
                    FontSize="10"
                    Clicked="OnTabRecommended"
                    CornerRadius="14" />

            <Button x:Name="TabPopular"
                    Grid.Column="1"
                    Text="Populares"
                    FontSize="10"
                    Clicked="OnTabPopular"
                    CornerRadius="14" />

            <Button x:Name="TabCommunity"
                    Grid.Column="2"
                    FontSize="10"
                    Text="Comunidade"
                    Clicked="OnTabCommunity"
                    CornerRadius="14" />
        </Grid>

        <!-- Feed (cards grandes estilo referÃªncia) -->
        <CollectionView Grid.Row="2"
                        x:Name="Feed"
                        ItemsSource="{Binding FeedItems}"
                        SelectionMode="None"
                        VerticalScrollBarVisibility="Never">

            <!-- âœ… EspaÃ§amento maior entre os cards -->
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="18"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource CardBorderStyle}"
                            Padding="0"
                            Margin="0,0,0,6">

                        <Grid>

                            <!-- IMAGEM -->
                            <Image Source="{Binding CoverUrl}"
                                   Aspect="AspectFill"
                                   HeightRequest="220" />

                            <!-- GRADIENT OVERLAY -->
                            <BoxView HeightRequest="220">
                                <BoxView.Background>
                                    <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                        <GradientStop Color="#D1000000" Offset="0" />
                                        <GradientStop Color="#2E000000" Offset="0.55" />
                                        <GradientStop Color="#00000000" Offset="1" />
                                    </LinearGradientBrush>
                                </BoxView.Background>
                            </BoxView>

                            <!-- TEXTOS (top-left) -->
                            <Grid Padding="14" RowDefinitions="Auto,Auto,Auto,*" HeightRequest="220">
                                <Label Text="{Binding Kicker}"
                                       FontSize="13"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       Opacity="0.92"/>

                                <Label Grid.Row="1"
                                       Text="{Binding Title}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       Margin="0,6,0,0"
                                       LineBreakMode="TailTruncation"/>

                                <Label Grid.Row="2"
                                       Text="{Binding Subtitle}"
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       TextColor="#E5E7EB"
                                       Margin="0,6,0,0"
                                       LineBreakMode="TailTruncation"/>
                            </Grid>

                            <!-- BOTÃ•ES (bottom) -->
                            <Grid Padding="14"
                                  VerticalOptions="End"
                                  ColumnDefinitions="*,*,Auto"
                                  ColumnSpacing="12">

                                <!-- Assistir -->
                                <Border Stroke="#26FFFFFF"
                                        StrokeThickness="1"
                                        BackgroundColor="#1AFFFFFF"
                                        HeightRequest="48">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>

                                    <Button Text="â–¶  Assistir"
                                            FontAttributes="Bold"
                                            BackgroundColor="Transparent"
                                            TextColor="White"
                                            Clicked="OnPlaySeriesClicked"/>
                                </Border>

                                <!-- Curtir (SÃ‰RIE) - SVG -->
                                <Border Grid.Column="1"
                                        Stroke="#26FFFFFF"
                                        StrokeThickness="1"
                                        BackgroundColor="#1AFFFFFF"
                                        HeightRequest="48">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>

                                    <!-- âœ… Quando curtido: fundo vermelho suave -->
                                    <Border.Triggers>
                                        <DataTrigger TargetType="Border"
                                                     Binding="{Binding IsLiked}"
                                                     Value="True">
                                            <Setter Property="BackgroundColor" Value="#33EF4444"/>
                                            <Setter Property="Stroke" Value="#40EF4444"/>
                                        </DataTrigger>
                                    </Border.Triggers>

                                    <!-- âœ… 2 colunas: Ã­cone fixo + texto -->
                                    <Grid ColumnDefinitions="24,*"
                                          ColumnSpacing="8"
                                          Padding="12,0"
                                          VerticalOptions="Center"
                                          HorizontalOptions="Center">

                                        <!-- Ãcone -->
                                        <Grid WidthRequest="16" HeightRequest="16"
                                              VerticalOptions="Center"
                                              HorizontalOptions="Center">
                                            <shapes:Path
                                                WidthRequest="25"
                                                HeightRequest="25"
                                                Fill="White"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center"
                                                Data="M12 21.593c-5.63-5.539-11-10.297-11-14.402 0-3.791 3.068-5.191 5.281-5.191 1.312 0 4.151.501 5.719 4.457 1.59-3.968 4.464-4.447 5.726-4.447 2.54 0 5.274 1.621 5.274 5.181 0 4.069-5.136 8.625-11 14.402m5.726-20.583c-2.203 0-4.446 1.042-5.726 3.238-1.285-2.206-3.522-3.248-5.719-3.248-3.183 0-6.281 2.187-6.281 6.191 0 4.661 5.571 9.429 12 15.809 6.43-6.38 12-11.148 12-15.809 0-4.011-3.095-6.181-6.274-6.181"/>
                                        </Grid>

                                        <!-- Texto -->
                                        <Label Grid.Column="1"
                                               Text="{Binding LikeButtonText}"
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               VerticalTextAlignment="Center"
                                               LineBreakMode="NoWrap"/>

                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnLikeSeriesTapped"/>
                                        </Grid.GestureRecognizers>
                                    </Grid>
                                </Border>

                                <!-- Share - SVG -->
                                <Border Grid.Column="2"
                                        Stroke="#26FFFFFF"
                                        StrokeThickness="1"
                                        BackgroundColor="#1AFFFFFF"
                                        WidthRequest="58"
                                        HeightRequest="48">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>

                                    <Grid HorizontalOptions="Center" VerticalOptions="Center"
                                          WidthRequest="58" HeightRequest="48">
                                        <shapes:Path
                                            WidthRequest="30"
                                            HeightRequest="30"
                                            Fill="White"
                                            HorizontalOptions="Center"
                                            VerticalOptions="Center"
                                            Data="M16.272 5.451c-.176-.45-.272-.939-.272-1.451 0-2.208 1.792-4 4-4s4 1.792 4 4-1.792 4-4 4c-1.339 0-2.525-.659-3.251-1.67l-7.131 3.751c.246.591.382 1.239.382 1.919 0 .681-.136 1.33-.384 1.922l7.131 3.751c.726-1.013 1.913-1.673 3.253-1.673 2.208 0 4 1.792 4 4s-1.792 4-4 4-4-1.792-4-4c0-.51.096-.999.27-1.447l-7.129-3.751c-.9 1.326-2.419 2.198-4.141 2.198-2.76 0-5-2.24-5-5s2.24-5 5-5c1.723 0 3.243.873 4.143 2.201l7.129-3.75zm3.728 11.549c1.656 0 3 1.344 3 3s-1.344 3-3 3-3-1.344-3-3 1.344-3 3-3zm-15-9c2.208 0 4 1.792 4 4s-1.792 4-4 4-4-1.792-4-4 1.792-4 4-4zm15-7c1.656 0 3 1.344 3 3s-1.344 3-3 3-3-1.344-3-3 1.344-3 3-3z"/>

                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnShareSeriesTapped"/>
                                        </Grid.GestureRecognizers>
                                    </Grid>
                                </Border>

                            </Grid>

                            <!-- Tap no card inteiro = assistir -->
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnCardTapped"/>
                            </Grid.GestureRecognizers>

                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
