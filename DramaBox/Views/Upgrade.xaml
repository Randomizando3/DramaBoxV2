<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DramaBox.Views.Upgrade"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.NavBarIsVisible="False"
    NavigationPage.HasNavigationBar="False"
    NavigationPage.HasBackButton="False">

    <ScrollView>
        <Grid Padding="18" RowSpacing="14">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Topo -->
            <Grid Grid.Row="0" ColumnDefinitions="*,Auto" VerticalOptions="Center">
                <Label Text="Planos"
                       Style="{StaticResource TitleLargeLabelStyle}" />

                <Button Grid.Column="1"
                        Text="✕"
                        BackgroundColor="Transparent"
                        WidthRequest="44"
                        HeightRequest="44"
                        CornerRadius="14" />
            </Grid>

            <Label Grid.Row="1"
                   Text="Escolha o plano ideal para você."
                   Style="{StaticResource MutedLabelStyle}" />

            <!-- Free -->
            <Border Grid.Row="2" Style="{StaticResource CardBorderStyle}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Free" Style="{StaticResource TitleMediumLabelStyle}" />
                    <Label Text="Acesso básico para assistir e salvar."
                           Style="{StaticResource MutedLabelStyle}" />

                    <VerticalStackLayout Spacing="6">
                        <Label Text="• Assistir conteúdos" />
                        <Label Text="• Salvar na playlist" />
                        <Label Text="• Perfil básico" />
                    </VerticalStackLayout>

                    <Border Style="{StaticResource InputContainerStyle}">
                        <Label Text="Plano atual (mock)" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                    </Border>
                </VerticalStackLayout>
            </Border>

            <!-- Premium -->
            <Border Grid.Row="3" Style="{StaticResource CardBorderStyle}" Margin="0,10,0,0">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Premium" Style="{StaticResource TitleMediumLabelStyle}" />
                    <Label Text="Recursos avançados e benefícios."
                           Style="{StaticResource MutedLabelStyle}" />

                    <VerticalStackLayout Spacing="6">
                        <Label Text="• Sem anúncios (futuro)" />
                        <Label Text="• Benefícios de criador (futuro)" />
                        <Label Text="• Conteúdo premium (futuro)" />
                    </VerticalStackLayout>

                    <!-- Botão degradê -->
                    <Border StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="14"/>
                        </Border.StrokeShape>

                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Offset="0">
                                    <GradientStop.Color>
                                        <AppThemeBinding Light="{StaticResource LightPrimaryColor}"
                                                         Dark="{StaticResource DarkPrimaryColor}" />
                                    </GradientStop.Color>
                                </GradientStop>

                                <GradientStop Offset="1">
                                    <GradientStop.Color>
                                        <AppThemeBinding Light="{StaticResource LightAccentColor}"
                                                         Dark="{StaticResource DarkAccentColor}" />
                                    </GradientStop.Color>
                                </GradientStop>
                            </LinearGradientBrush>
                        </Border.Background>

                        <Button Text="Assinar Premium"
                                Style="{StaticResource GradientButtonStyle}"
                                BackgroundColor="Transparent" />
                    </Border>
                </VerticalStackLayout>
            </Border>
        </Grid>
    </ScrollView>
</ContentPage>
