<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DramaBox.Views.Upgrade"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.NavBarIsVisible="False"
    NavigationPage.HasNavigationBar="False"
    NavigationPage.HasBackButton="False">

    <Grid Padding="18" RowSpacing="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Topo -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">

            <!-- Back (back.png / backwhite.png) -->
            <Border StrokeThickness="1"
                    WidthRequest="44"
                    HeightRequest="44"
                    BackgroundColor="{AppThemeBinding Light=#0F000000, Dark=#55000000}"
                    Stroke="{AppThemeBinding Light=#1A000000, Dark=#26FFFFFF}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="14"/>
                </Border.StrokeShape>

                <ImageButton Source="{AppThemeBinding Light=back.png, Dark=backwhite.png}"
                             BackgroundColor="Transparent"
                             WidthRequest="44"
                             HeightRequest="44"
                             Padding="10"
                             Clicked="OnBackClicked"/>
            </Border>

            <Label Grid.Column="1"
                   Text="Planos"
                   Style="{StaticResource TitleLargeLabelStyle}"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>

            <BoxView Grid.Column="2" WidthRequest="44" HeightRequest="44" Opacity="0"/>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="14">

                <Label Text="Escolha seu plano"
                       Style="{StaticResource TitleMediumLabelStyle}" />

                <Label Text="Por enquanto sem pagamento: ao selecionar, apenas salva a flag no Firebase."
                       Style="{StaticResource MutedLabelStyle}" />

                <!-- FREE -->
                <Border x:Name="FreeCard" Style="{StaticResource CardBorderStyle}">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Free"
                               FontAttributes="Bold"
                               FontSize="18"/>

                        <Label Text="• Acesso básico ao app"
                               Style="{StaticResource MutedLabelStyle}" />
                        <Label Text="• Sem benefícios premium"
                               Style="{StaticResource MutedLabelStyle}" />

                        <Button Text="Selecionar Free"
                                Style="{StaticResource OutlineButtonStyle}"
                                Clicked="OnSelectFreeClicked"/>
                    </VerticalStackLayout>
                </Border>

                <!-- PREMIUM -->
                <Border x:Name="PremiumCard" Style="{StaticResource CardBorderStyle}">
                    <VerticalStackLayout Spacing="10">

                        <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                            <Label Text="Premium"
                                   FontAttributes="Bold"
                                   FontSize="18"/>

                            <!-- preço -->
                            <Border Grid.Column="1"
                                    StrokeThickness="0"
                                    Padding="10,6"
                                    HorizontalOptions="End">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12"/>
                                </Border.StrokeShape>
                                <Border.Background>
                                    <AppThemeBinding Light="#14000000" Dark="#26FFFFFF"/>
                                </Border.Background>
                                <Label x:Name="PremiumPriceLabel"
                                       Text="R$ 29,90/mês"
                                       FontAttributes="Bold"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light=#111827, Dark=White}"/>
                            </Border>
                        </Grid>

                        <Label Text="Benefícios do Premium:"
                               FontAttributes="Bold"
                               FontSize="13"
                               TextColor="{StaticResource AppMutedTextColor}"/>

                        <VerticalStackLayout Spacing="6">
                            <Label Text="• Acesso ao programa de receitas ao adicionar um drama"
                                   Style="{StaticResource MutedLabelStyle}" />
                            <Label Text="• Dramas em destaque no topo"
                                   Style="{StaticResource MutedLabelStyle}" />
                            <Label Text="• Status diferenciado no perfil"
                                   Style="{StaticResource MutedLabelStyle}" />
                            <Label Text="• Participação em sorteios semanais e mensais"
                                   Style="{StaticResource MutedLabelStyle}" />
                            <Label Text="• Salvar dramas na playlist"
                                   Style="{StaticResource MutedLabelStyle}" />
                        </VerticalStackLayout>

                        <!-- Botão premium (gradiente) -->
                        <Border StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="14"/>
                            </Border.StrokeShape>

                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Offset="0">
                                        <GradientStop.Color>
                                            <AppThemeBinding Light="{StaticResource LightPrimaryColor}"
                                                             Dark="{StaticResource DarkPrimaryColor}" />
                                        </GradientStop.Color>
                                    </GradientStop>
                                    <GradientStop Offset="1">
                                        <GradientStop.Color>
                                            <AppThemeBinding Light="{StaticResource LightAccentColor}"
                                                             Dark="{StaticResource DarkAccentColor}" />
                                        </GradientStop.Color>
                                    </GradientStop>
                                </LinearGradientBrush>
                            </Border.Background>

                            <Button x:Name="SelectPremiumButton"
                                    Text="Selecionar Premium"
                                    Style="{StaticResource GradientButtonStyle}"
                                    BackgroundColor="Transparent"
                                    Clicked="OnSelectPremiumClicked"/>
                        </Border>

                        <Label Text="* Valor exibido como referência (mock)."
                               FontSize="11"
                               Opacity="0.7"
                               TextColor="{StaticResource AppMutedTextColor}"/>
                    </VerticalStackLayout>
                </Border>

                <BoxView HeightRequest="8" Opacity="0" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>