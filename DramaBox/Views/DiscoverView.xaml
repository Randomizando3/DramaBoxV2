<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DramaBox.Views.DiscoverView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.NavBarIsVisible="False"
    NavigationPage.HasNavigationBar="False"
    NavigationPage.HasBackButton="False"
    BackgroundColor="{AppThemeBinding Light=#F4F6FB, Dark=#0B1220}">

    <ContentPage.Resources>
        <ResourceDictionary>

            <!-- Paleta / tokens locais (sem estilo global) -->
            <Color x:Key="BgLight">#F4F6FB</Color>
            <Color x:Key="BgDark">#0B1220</Color>

            <Color x:Key="TextLight">#0F172A</Color>
            <Color x:Key="TextDark">#E5E7EB</Color>

            <Color x:Key="MutedLight">#64748B</Color>
            <Color x:Key="MutedDark">#9CA3AF</Color>

            <Color x:Key="BorderLight">#E2E8F0</Color>
            <Color x:Key="BorderDark">#1F2937</Color>

            <Color x:Key="Danger">#EF4444</Color>

            <!-- Chip style -->
            <Style x:Key="ChipBtn" TargetType="Button">
                <Setter Property="Padding" Value="12,7" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="FontSize" Value="13" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#E9EEF7, Dark=#111B34}" />
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#1E40AF, Dark=#C7D2FE}" />
                <Setter Property="BorderWidth" Value="0" />
                <Setter Property="HeightRequest" Value="34" />
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*"
          BackgroundColor="{AppThemeBinding Light=#F4F6FB, Dark=#0B1220}">

        <!-- TOP BAR (sem tÃ­tulo e sem engrenagem) -->
        <Grid Grid.Row="0"
              Padding="12,12,12,10"
              ColumnDefinitions="*,Auto,Auto"
              ColumnSpacing="10"
              BackgroundColor="{AppThemeBinding Light=#F4F6FB, Dark=#0B1220}">

            <!-- Search -->
            <Border Grid.Column="0"
                    Stroke="{AppThemeBinding Light=#1A0F172A, Dark=#1FFFFFFF}"
                    StrokeThickness="1"
                    BackgroundColor="{AppThemeBinding Light=#0F0F172A, Dark=#14FFFFFF}"
                    Padding="12,10">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="14"/>
                </Border.StrokeShape>

                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8" VerticalOptions="Center">
                    <Label Text="ðŸ”Ž"
                           FontSize="16"
                           TextColor="{AppThemeBinding Light=#D90F172A, Dark=#EBFFFFFF}"
                           VerticalOptions="Center" />
                    <Entry Grid.Column="1"
                           x:Name="SearchEntry"
                           Placeholder="Pesquisar sÃ©rie, autor ou episÃ³dio..."
                           PlaceholderColor="{AppThemeBinding Light=#9E0F172A, Dark=#B8FFFFFF}"
                           TextColor="{AppThemeBinding Light=#EB0F172A, Dark=#EBFFFFFF}"
                           FontAttributes="Bold"
                           FontSize="13"
                           BackgroundColor="Transparent"
                           ReturnType="Search"
                           TextChanged="OnSearchTextChanged" />
                </Grid>
            </Border>

            <!-- Rewards (ðŸŽ + badge) -->
            <Grid Grid.Column="1" WidthRequest="44" HeightRequest="44">
                <Border Stroke="{AppThemeBinding Light=#1A0F172A, Dark=#1FFFFFFF}"
                        StrokeThickness="1"
                        BackgroundColor="{AppThemeBinding Light=#0F0F172A, Dark=#14FFFFFF}"
                        Padding="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Button Text="ðŸŽ"
                            Padding="-5,0,-5,0"
                            FontSize="18"
                            BackgroundColor="Transparent"
                            TextColor="{AppThemeBinding Light=#D90F172A, Dark=#EBFFFFFF}"
                            Clicked="OnRewardsClicked"/>
                </Border>

                <Border HorizontalOptions="End"
                        VerticalOptions="Start"
                        TranslationX="6"
                        TranslationY="-6"
                        Padding="6,3"
                        BackgroundColor="{StaticResource Danger}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="999"/>
                    </Border.StrokeShape>
                    <Label Text="+30"
                           FontSize="11"
                           FontAttributes="Bold"
                           TextColor="White"/>
                </Border>
            </Grid>

            <!-- VIP -->
            <Border Grid.Column="2"
                    HeightRequest="44"
                    Padding="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#F7D77A" Offset="0" />
                        <GradientStop Color="#F2B84F" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <Button Text="VIP"
                        FontAttributes="Bold"
                        FontSize="14"
                        TextColor="#3A2A00"
                        BackgroundColor="Transparent"
                        Padding="14,0"
                        Clicked="OnVipClicked" />
            </Border>
        </Grid>

        <!-- CONTENT -->
        <ScrollView Grid.Row="1">
            <!-- padding bottom alto pra nÃ£o bater na tabbar -->
            <VerticalStackLayout Spacing="12" Padding="12,10,12,110">

                <!-- HERO (Carousel estilo print) -->
                <Grid>
                    <Border Stroke="{AppThemeBinding Light=#E2E8F0, Dark=#1F2937}"
                            StrokeThickness="1"
                            BackgroundColor="#0B1220">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>

                        <Grid>
                            <!-- Troquei FeaturedCarousel para CarouselView, mantendo o x:Name -->
                            <CarouselView x:Name="FeaturedCarousel"
                                          HeightRequest="245"
                                          ItemsSource="{Binding FeaturedItems}"
                                          IndicatorView="HeroIndicator"
                                          PeekAreaInsets="0"
                                          IsBounceEnabled="False"
                                          IsScrollAnimated="False"
                                          HorizontalScrollBarVisibility="Never"
                                          CurrentItemChanged="OnFeaturedCurrentItemChanged">

                                <CarouselView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid HeightRequest="245">
                                            <Image Source="{Binding CoverUrl}" Aspect="AspectFill"/>

                                            <BoxView>
                                                <BoxView.Background>
                                                    <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                                        <GradientStop Color="#D1000000" Offset="0" />
                                                        <GradientStop Color="#14000000" Offset="0.58" />
                                                        <GradientStop Color="#2E000000" Offset="1" />
                                                    </LinearGradientBrush>
                                                </BoxView.Background>
                                            </BoxView>

                                            <Grid Padding="14" RowDefinitions="Auto,Auto,Auto,Auto" VerticalOptions="End">
                                                <Label Text="Destaque â€¢ Drama"
                                                       FontSize="12"
                                                       FontAttributes="Bold"
                                                       TextColor="White"
                                                       Opacity="0.92"/>

                                                <Label Grid.Row="1"
                                                       Text="{Binding Title}"
                                                       FontSize="17"
                                                       FontAttributes="Bold"
                                                       TextColor="White"
                                                       Margin="0,4,0,0"/>

                                                <HorizontalStackLayout Grid.Row="2" Spacing="10" Margin="0,6,0,0">
                                                    <Label Text="{Binding EpisodesText}" FontSize="12" FontAttributes="Bold" TextColor="White" Opacity="0.9"/>
                                                    <Label Text="{Binding DurationText}"  FontSize="12" FontAttributes="Bold" TextColor="White" Opacity="0.9"/>
                                                    <Label Text="{Binding AgeText}"       FontSize="12" FontAttributes="Bold" TextColor="White" Opacity="0.9"/>
                                                </HorizontalStackLayout>

                                                <Button Grid.Row="3"
                                                        Text="â–¶  Assistir"
                                                        Margin="0,10,0,0"
                                                        BackgroundColor="White"
                                                        TextColor="#111827"
                                                        FontAttributes="Bold"
                                                        CornerRadius="10"
                                                        Padding="12,10"
                                                        Clicked="OnHeroPlayClicked"/>
                                            </Grid>
                                        </Grid>
                                    </DataTemplate>
                                </CarouselView.ItemTemplate>
                            </CarouselView>
                        </Grid>
                    </Border>

                    <IndicatorView x:Name="HeroIndicator"
                                   HorizontalOptions="Center"
                                   VerticalOptions="End"
                                   Margin="0,0,0,-10"
                                   IndicatorColor="#5964748B"
                                   SelectedIndicatorColor="#A62563EB"/>
                </Grid>

                <!-- Chips -->
                <HorizontalStackLayout Spacing="8" Margin="0,10,0,0">
                    <Button Text="Drama" Style="{StaticResource ChipBtn}" Clicked="OnChipClicked"/>
                    <Button Text="Suspense" Style="{StaticResource ChipBtn}" Clicked="OnChipClicked"/>
                    <Button Text="Fantasia" Style="{StaticResource ChipBtn}" Clicked="OnChipClicked"/>
                </HorizontalStackLayout>

                <!-- TOP 10 -->
                <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center" Margin="0,6,0,0">
                    <Label Text="Em destaque"
                           FontSize="15"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#0F172A, Dark=#E5E7EB}"/>
                    <Button Grid.Column="1"
                            Text="Ver tudo"
                            BackgroundColor="Transparent"
                            FontSize="12"
                            FontAttributes="Bold"
                            TextColor="{AppThemeBinding Light=#64748B, Dark=#9CA3AF}"
                            Clicked="OnSeeAllTopClicked"/>
                </Grid>

                <CollectionView x:Name="TopRow"
                                ItemsLayout="HorizontalList"
                                SelectionMode="Single"
                                SelectionChanged="OnTopSelected"
                                HorizontalScrollBarVisibility="Never">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid WidthRequest="170" HeightRequest="200" Margin="0,0,12,0">
                                <Border Stroke="{AppThemeBinding Light=#E2E8F0, Dark=#1F2937}"
                                        StrokeThickness="1"
                                        BackgroundColor="#0B1220">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>

                                    <Grid>
                                        <Image Source="{Binding CoverUrl}" Aspect="AspectFill"/>

                                        <BoxView>
                                            <BoxView.Background>
                                                <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                                    <GradientStop Color="#BD000000" Offset="0"/>
                                                    <GradientStop Color="#00000000" Offset="0.58"/>
                                                </LinearGradientBrush>
                                            </BoxView.Background>
                                        </BoxView>

                                        <!-- nÃºmero do rank (gigante suave) -->
                                        <Label Text="{Binding TopRank}"
                                               FontSize="104"
                                               FontAttributes="Bold"
                                               TextColor="#38FFFFFF"
                                               Margin="10,0,0,0"
                                               VerticalOptions="End"
                                               LineHeight="0.9"/>

                                        <!-- VIP badge -->
                                        <Border IsVisible="{Binding IsVip}"
                                                BackgroundColor="#EC4899"
                                                Padding="8,5"
                                                HorizontalOptions="Start"
                                                VerticalOptions="Start"
                                                Margin="8">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="9"/>
                                            </Border.StrokeShape>
                                            <Label Text="VIP"
                                                   FontSize="11"
                                                   FontAttributes="Bold"
                                                   TextColor="White"/>
                                        </Border>

                                        <!-- overlay bottom -->
                                        <Border VerticalOptions="End"
                                                Padding="10,9"
                                                BackgroundColor="#1AFFFFFF"
                                                Stroke="#26FFFFFF"
                                                StrokeThickness="1"
                                                Margin="10">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="10"/>
                                            </Border.StrokeShape>
                                            <VerticalStackLayout Spacing="3">
                                                <Label Text="{Binding Title}"
                                                       FontSize="12"
                                                       TextColor="#FFFFFFF2"
                                                       LineBreakMode="TailTruncation"/>
                                                <Label Text="{Binding Subtitle}"
                                                       FontSize="11"
                                                       TextColor="#FFFFFFC7"
                                                       LineBreakMode="TailTruncation"/>
                                            </VerticalStackLayout>
                                        </Border>
                                    </Grid>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- FEED -->
                <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center" Margin="0,6,0,0">
                    <Label x:Name="FeedTitle"
                           Text="Novidades"
                           FontSize="15"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#0F172A, Dark=#E5E7EB}"/>
                    <Button Grid.Column="1"
                            Text="Ver tudo"
                            BackgroundColor="Transparent"
                            FontSize="12"
                            FontAttributes="Bold"
                            TextColor="{AppThemeBinding Light=#64748B, Dark=#9CA3AF}"
                            Clicked="OnSeeAllCategoryClicked"/>
                </Grid>

                <CollectionView x:Name="FeedList"
                                SelectionMode="Single"
                                SelectionChanged="OnFeedSelected"
                                VerticalOptions="Fill"
                                HorizontalScrollBarVisibility="Never">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Stroke="{AppThemeBinding Light=#E2E8F0, Dark=#1F2937}"
                                    StrokeThickness="1"
                                    BackgroundColor="{AppThemeBinding Light=White, Dark=#0F172A}"
                                    Padding="12"
                                    Margin="0,0,0,12">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="14"/>
                                </Border.StrokeShape>

                                <Grid ColumnDefinitions="110,*" ColumnSpacing="12">
                                    <Border StrokeThickness="0" Padding="0" HeightRequest="80">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="12"/>
                                        </Border.StrokeShape>
                                        <Image Source="{Binding CoverUrl}" Aspect="AspectFill" HeightRequest="80" WidthRequest="110"/>
                                    </Border>

                                    <VerticalStackLayout Grid.Column="1" Spacing="6">
                                        <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="14"
                                               TextColor="{AppThemeBinding Light=#0F172A, Dark=#E5E7EB}"/>
                                        <Label Text="{Binding Subtitle}" FontSize="12"
                                               TextColor="{AppThemeBinding Light=#64748B, Dark=#9CA3AF}"/>
                                        <Label Text="{Binding Categories[0]}" FontSize="12"
                                               TextColor="{AppThemeBinding Light=#64748B, Dark=#9CA3AF}"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <BoxView HeightRequest="24" Opacity="0"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Mantido sÃ³ pra compatibilidade: seu code usa CategoryRow, mas agora os chips sÃ£o botÃµes.
             Se vocÃª quiser, eu removo depois e ajusto o code-behind. -->
        <CollectionView x:Name="CategoryRow" IsVisible="False" />

    </Grid>
</ContentPage>
