<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DramaBox.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:DramaBox.Views"
    Shell.NavBarIsVisible="True"
    FlyoutBehavior="Disabled">

    <!-- ✅ Tokens do Shell com tema -->
    <Shell.Resources>
        <ResourceDictionary>

            <!-- Background geral do Shell -->
            <Color x:Key="ShellBgLight">#F4F6FB</Color>
            <Color x:Key="ShellBgDark">#0B1220</Color>

            <!-- Superfície (TabBar/Flyout) -->
            <Color x:Key="ShellSurfaceLight">#FFFFFF</Color>
            <Color x:Key="ShellSurfaceDark">#0F172A</Color>

            <!-- Texto -->
            <Color x:Key="ShellTextLight">#0F172A</Color>
            <Color x:Key="ShellTextDark">#E5E7EB</Color>

            <!-- Muted -->
            <Color x:Key="ShellMutedLight">#64748B</Color>
            <Color x:Key="ShellMutedDark">#9CA3AF</Color>

            <!-- Accent -->
            <Color x:Key="ShellAccentLight">#2563EB</Color>
            <Color x:Key="ShellAccentDark">#6C8CFF</Color>

            <!-- Disabled -->
            <Color x:Key="ShellDisabledLight">#CBD5E1</Color>
            <Color x:Key="ShellDisabledDark">#4B5563</Color>

        </ResourceDictionary>
    </Shell.Resources>

    <!-- ✅ Aplica tema no Shell -->
    <Shell.BackgroundColor>
        <AppThemeBinding Light="{StaticResource ShellBgLight}"
                         Dark="{StaticResource ShellBgDark}" />
    </Shell.BackgroundColor>

    <Shell.TitleColor>
        <AppThemeBinding Light="{StaticResource ShellTextLight}"
                         Dark="{StaticResource ShellTextDark}" />
    </Shell.TitleColor>

    <Shell.DisabledColor>
        <AppThemeBinding Light="{StaticResource ShellDisabledLight}"
                         Dark="{StaticResource ShellDisabledDark}" />
    </Shell.DisabledColor>

    <Shell.UnselectedColor>
        <AppThemeBinding Light="{StaticResource ShellMutedLight}"
                         Dark="{StaticResource ShellMutedDark}" />
    </Shell.UnselectedColor>

    <Shell.TabBarBackgroundColor>
        <AppThemeBinding Light="{StaticResource ShellSurfaceLight}"
                         Dark="{StaticResource ShellSurfaceDark}" />
    </Shell.TabBarBackgroundColor>

    <Shell.TabBarForegroundColor>
        <AppThemeBinding Light="{StaticResource ShellAccentLight}"
                         Dark="{StaticResource ShellAccentDark}" />
    </Shell.TabBarForegroundColor>

    <Shell.TabBarTitleColor>
        <AppThemeBinding Light="{StaticResource ShellAccentLight}"
                         Dark="{StaticResource ShellAccentDark}" />
    </Shell.TabBarTitleColor>

    <Shell.TabBarUnselectedColor>
        <AppThemeBinding Light="{StaticResource ShellMutedLight}"
                         Dark="{StaticResource ShellMutedDark}" />
    </Shell.TabBarUnselectedColor>

    <!-- ✅ MENU EMBAIXO (TabBar) — único lugar onde existem as telas principais -->
    <TabBar Route="root">
        <ShellContent
            Route="discover"
            Title="Descobrir"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:DiscoverView}" />

        <ShellContent
            Route="community"
            Title="Comunidade"
            Icon="community.png"
            ContentTemplate="{DataTemplate views:CommunityView}" />

        <ShellContent
            Route="creation"
            Title="Criar"
            Icon="plus.png"
            ContentTemplate="{DataTemplate views:CreationView}" />

        <ShellContent
            Route="playlist"
            Title="Playlist"
            Icon="library.png"
            ContentTemplate="{DataTemplate views:PlaylistView}" />

        <ShellContent
            Route="profile"
            Title="Perfil"
            Icon="profile.png"
            ContentTemplate="{DataTemplate views:ProfileView}" />
    </TabBar>

</Shell>